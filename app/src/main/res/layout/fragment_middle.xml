<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MiddleFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivProfile"
        android:scaleType="centerCrop"
        android:layout_marginHorizontal="3dp"
        android:background="@drawable/ic_shadow_bottom_to_top"
        app:shapeAppearance="@style/ImageShapeC12"
        app:layout_constraintStart_toStartOf="@id/mid"
        app:layout_constraintEnd_toEndOf="@id/mid"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/mid"
        android:layout_marginHorizontal="11dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPass"
        android:layout_marginEnd="-40dp"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@id/mid"
        android:background="@drawable/ic_pass_bg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ibPass"
        android:layout_marginEnd="-15dp"
        android:layout_marginBottom="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/mid"
        android:background="@drawable/ic_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLike"
        android:layout_marginStart="-40dp"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@id/mid"
        android:background="@drawable/ic_like_bg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ibLike"
        android:layout_marginStart="-20dp"
        android:layout_marginBottom="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/mid"
        android:background="@drawable/ic_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ibPassMark"
        android:visibility="gone"
        android:layout_marginBottom="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_pass"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ibLikeMark"
        android:visibility="gone"
        android:layout_marginBottom="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_like"
        android:layout_width="80dp"
        android:layout_height="80dp" />
</androidx.constraintlayout.widget.ConstraintLayout>